/**app.wxss**/
page{
  min-height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.nf-page-footer{
  padding: 40rpx 0;
  text-align: center;
  color: #aaaaaa;
  font-size: 14px;
}

.nf-toast{
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    padding: 20rpx 30rpx;
    border-radius: 8rpx;
    font-size: 12px;
    color: #fff;
    background: rgba(0, 0, 0, .9);
    z-index: 200;
    animation: fadeInOut 3s ease-in-out;
}

.nf-active{
  color: #14baff !important;
}
.nf-fl{
  float: left;
}
.nf-fr{
  float: right;
}
.nf-red{
  color: #fc1318 !important;
}
.nf-gray{
  color: #aaaaaa !important;
}
.nf-text-right{
    text-align: right;
}

@keyframes fadeInOut{
    0%{
        opacity: 0;
    }
    30%{
        opacity: 1;
    }
    70%{
        opacity: 1;
    }
    100%{
        opacity: 0;
    }
}