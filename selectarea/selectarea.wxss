.masker {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 18;
}

.region-container {
    width: 100%;
    height: 500rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
    z-index: 20;
}

.region-header {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ebebeb;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
}

.region-header text {
    padding: 0 40rpx;
    height: 100%;
}

.region-header .confirm {
    color: #14baff;
}

.region {
    width: 100%;
    height: 300rpx;
}

.addr-item {
    line-height: 34px;
    text-align: center;
    font-size: 14px;
}

.show {
    text-align: center;
    margin: 30rpx;
    height: 50rpx;
}
.choose {
    margin: 30rpx 0;
}

.active {
    height: 50rpx;
}
