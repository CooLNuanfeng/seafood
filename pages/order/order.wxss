page{
    min-height: 100%;
    background: #f4f4f4;
}

.nf-user{
    padding: 10rpx 0;
    background: #ffffff;
}
.nf-user-add-adress{
    padding: 5rpx 15rpx;
}
.nf-add-address-btn{
    background: #14baff;
    color: #ffffff;
}
.nf-address-line{
    height: 4rpx;
    background: url(/images/icon/line.png) repeat-x;
    margin-bottom: 20rpx;
}
.nf-user-address{
    position: relative;
    display: flex;
    height: 120rpx;
    flex-direction: column;
    padding: 0 25rpx;
}
.nf-user-address-edit{
    position: absolute;
    top: 28rpx;
    right: 20rpx;
    width: 40rpx;
    height: 40rpx;
}
.nf-user-info{
    flex: 1;
    height: 30rpx;
    display: flex;
}
.nf-user-address-info{
    flex: 1;
    padding-top: 10rpx;
}
.nf-user-address-info text{
    font-size: 16px;
}
.nf-user-name{
    flex: 1;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bold
}
.nf-user-phone{
    flex: 3;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.nf-user-default{
    padding: 5rpx 15rpx;
    margin: 0 15rpx;
    background: #fc1318;
    color: #ffffff;
    border-radius: 2px;
    font-size: 12px;
}
.nf-address-icon{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.nf-shop-info{
    display: flex;
    padding: 15rpx;
    background: #ffffff;
}
.nf-shop-info-img{
    width: 200rpx;
    height: 200rpx;
}
.nf-shop-text{
    flex: 1;
    padding-left: 15rpx;
}
.nf-shop-title{
    font-size: 26px;
}
.nf-shop-price{
    padding: 10rpx 0;
    display: flex;
}
.nf-shop-price-item{
    flex: 1;
    font-size: 16px;
}
.nf-shop-price-name{
    color: #999999;
}
.nf-shop-price-num{
    color: #fc1318;
    font-weight: bold;
    padding: 0 10rpx;
}
.nf-shop-price-unit{
    color: #333333;
}
.nf-shop-all-price{
    color: #fc1318;
    font-size: 22px;
}
.nf-shop-pay{
    font-size: 16px;
    text-align: right;
}
.nf-shop-other-list{
    padding: 0 20rpx;
    background: #ffffff;
}
.nf-shop-list-item{
    position: relative;
    display: flex;
    height: 90rpx;
    border-top: 1px solid #dddddd;
}
.nf-shop-list-item text{
    flex: 1;
    line-height: 90rpx;
    font-size: 16px;
}
.nf-shop-list-item picker,.nf-shop-list-item textarea,.nf-shop-express-price{
    flex: 2;
    line-height: 90rpx;
    font-size: 16px;
}
.nf-shop-icon{
    position: absolute;
    right: 20rpx;
    top: 26rpx;
    width: 40rpx;
    height: 40rpx;
}
.nf-shop-list-message{
    height: 200rpx;
}
.nf-shop-list-item textarea{
    height: auto;
    width: auto;
    margin: 10rpx 0;
}
.nf-shop-express-price text{
    color: #fc1318;
}
.nf-price-compute{
    margin-top: 20rpx;
    padding: 20rpx 0;
    background: #ffffff;
}
.nf-price-notice{
    text-align: center;
    font-size: 18px;
    line-height: 60rpx;
}
.nf-price-notice text{
    font-size: 26px;
    color: #fc1318;
}
.nf-price-notice-express{
    text-align: center;
    font-size: 14px;
}
.nf-price-pay-money{
    padding: 20rpx;
}
.nf-shop-notice{
    padding: 10rpx 0;
    font-size: 14px;
    color: #666666;
}
.nf-shop-notice text{
    color: #fc1318;
}