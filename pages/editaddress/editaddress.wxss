page{
    background: #f4f4f4;
}
.nf-edit-address{
    padding-left: 20rpx;
    background: #ffffff;
}
.nf-edit-item{
    display: flex;
    flex-direction: row;
    min-height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #dddddd;
    padding: 0 15rpx;
    font-size: 14px;
}
.nf-edit-item:last-child{
    border-bottom: 0;
}
.nf-edit-item text{
    flex: 1;
}
.nf-edit-item input,.nf-edit-item textarea{
    flex: 3;
    height: 90rpx;
}
.nf-edit-item textarea{
    height: 140rpx;
    margin-top: 10rpx;
    font-size: 14px;
}
.nf-edit-button{
    padding: 50rpx 0;
    display: flex;
    flex-direction: row;
}
.nf-edit-button button{
    flex: 1;
    margin: 0 30rpx;
    height: 70rpx;
    font-size: 14px;
}
.nf-edit-btn-save{
    border: 1px solid #ff3333;
    color: #ff3333;
    background: #ffffff;
}
.nf-edit-btn-del{
    border: 1px solid #999999;
    color: #999999;
    background: #ffffff;
}